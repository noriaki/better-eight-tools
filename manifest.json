{
  
  "name": "Better Eight (8card.net) Tools",
  "version": "0.2.0",
  "manifest_version": 2,

  "description": "Eightをもっと使いやすく。名刺データを「Gmail CSV」「vCard（iPhone, Outlook等）」形式でダウンロード",

  "icons": {
    "16": "app/icons/icon16.png",
    "48": "app/icons/icon48.png",
    "128": "app/icons/icon128.png"
  },

  "page_action": {
    "default_icon": {
      "19": "app/icons/icon19.png",
      "38": "app/icons/icon38.png"
    },
    "default_title": "Click to open Better Eight Tools",
    "default_popup": "app/views/popup.html"
  },

  "background": {
    "scripts": [
      "app/js/libs/jquery/jquery-2.1.3.min.js",
      "app/js/libs/google/analytics.js",
      "app/js/controllers/check-confirm.js",
      "app/js/controllers/check-premium.js",
      "app/js/background/init.js"
    ],
    "presistent": false
  },
  
  "content_scripts": [
    {
      "matches": [
	"https://8card.net/myhome",
	"https://8card.net/myhome/people",
	"https://8card.net/export/*"
      ],
      "exclude_matches": [],
      "css": [],
      "js": [
	"app/js/libs/jquery/jquery-2.1.3.min.js",
	"app/js/content_scripts/init.js"
      ]
    }
  ],

  "permissions": [
    "https://eight-export-csv-production.s3-ap-northeast-1.amazonaws.com/",
    "storage"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.google-analytics.com; object-src 'self'"

}
