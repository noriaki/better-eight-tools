/* -*- mode: json; -*- */
{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "ecmaFeatures": {
    "modules": true
  },
  "globals": {
    "chrome": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "strict": [2, "function"],
    "no-undef": 2,
    "no-console": 0,
    "arrow-parens": [2, "always"],
    "no-var": 2,
    "prefer-const": 2,
    "semi": [2, "always"]
  }
}
